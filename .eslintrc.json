{
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 9,
    "project": "./tsconfig.json",
    "extraFileExtensions": [
      "scss"
    ]
  },
  "extends": [
    "react-app",
    "airbnb",
    "plugin:jsx-a11y/recommended",
    "prettier",
    "prettier/react"
  ],
  "plugins": [
    "@typescript-eslint",
    "react-hooks",
    "jsx-a11y",
    "prettier"
  ],
  "ignorePatterns": [
    "src/**/*.scss",
    "node_modules/",
    "src/serviceWorker.ts",
    "src/react-app-env.d.ts",
    "src/setupTests.js",
    "src/testHelpers.js"
  ],
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "vars": "all",
        "argsIgnorePattern": "[iI]gnored",
        "args": "after-used",
        "ignoreRestSiblings": false
      }
    ],
    "import/prefer-default-export": [
      "off"
    ],
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "singleQuote": true,
        "endOfLine": "lf",
        "printWidth": 250
      }
    ],
    "react/jsx-props-no-spreading": [0],
    "react-hooks/exhaustive-deps": "warn",
    "react-hooks/rules-of-hooks": "error",
    "react/jsx-filename-extension": [
      2,
      {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    ],
    "semi": 0,
    "react/prop-types": [
      0
    ],
    "react/destructuring-assignment": [
      0
    ],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": [
          "src"
        ],
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    }
  }
}